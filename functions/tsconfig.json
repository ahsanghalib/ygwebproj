{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "es2017",
      "es2015",
      "dom",
      "es6"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ]
}
